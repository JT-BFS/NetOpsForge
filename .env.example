# NetOpsForge Environment Configuration
# Copy this file to .env and fill in your values

# Linear Integration (optional)
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_linear_team_id_here

# ServiceNow Integration (optional)
SERVICENOW_INSTANCE=your_instance.service-now.com
SERVICENOW_USERNAME=your_username
SERVICENOW_PASSWORD=your_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/netopsforge.log

# CMDB Path
CMDB_PATH=cmdb/devices.yml

# Packs and Recipes Paths
PACKS_PATH=packs
RECIPES_PATH=recipes

