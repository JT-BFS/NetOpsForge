# NetOpsForge Environment Configuration
# Copy this file to .env and fill in your values

# Linear Integration (optional)
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_TEAM_ID=your_linear_team_id_here

# ServiceNow Integration (optional)
SERVICENOW_INSTANCE=your_instance.service-now.com
SERVICENOW_USERNAME=your_username
SERVICENOW_PASSWORD=your_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/netopsforge.log

# ============================================
# CMDB Configuration
# ============================================
# CMDB Source: yaml, solarwinds, servicenow, database
CMDB_SOURCE=yaml

# CMDB Path (for yaml source)
CMDB_PATH=cmdb/devices.yml

# ============================================
# SolarWinds Orion Integration
# ============================================
# Required if CMDB_SOURCE=solarwinds
SOLARWINDS_HOSTNAME=solarwinds.company.com
SOLARWINDS_USERNAME=netops_readonly
SOLARWINDS_PASSWORD=<use Windows Credential Manager instead>
SOLARWINDS_VERIFY_SSL=true
SOLARWINDS_CACHE_TTL=300  # Cache TTL in seconds (5 minutes)

# ============================================
# Paths
# ============================================
# Packs and Recipes Paths
PACKS_PATH=packs
RECIPES_PATH=recipes

